@{
    ViewData["Title"] = "Preview";
}

@model IEnumerable<XMLExternalEntity.Models.Offer>

<div class="row" style="position: relative">
    <div class="col-md-12">
        <h2>Please control your offers...</h2>
    </div>
</div>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Offer ID</th>
            <th>Title</th>
            <th>Total</th>
            <th>Reference</th>
        </tr>
    </thead>
    <tbody>
        @foreach (XMLExternalEntity.Models.Offer offer in Model)
        {
            <tr>
                <td>@offer.ID</td>
                <td>@offer.Title</td>
                <td>@offer.Total</td>
                <td>@offer.Reference</td>
            </tr>
        }
    </tbody>
</table>

<button class="btn btn-primary" type="submit">Commit</button>

